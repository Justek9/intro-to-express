<h2>Contact me</h2>

{{#if isSent}}
	<div class='isSent'>
		The message has been sent!
	</div>
	<div>Image sent:
		<img src='/uploads/{{image}}' alt={{image}} width='50' height='60' />
	</div>
{{/if}}

{{#if isError}}
	<div class='isError'>
		You can't leave fields empty!
	</div>
{{/if}}

<form action='/contact/send-message' enctype='multipart/form-data' method='POST'>
	<label>
		Your name:
		<input type='text' name='author' />
	</label>
	<label>
		Your email:
		<input type='email' name='sender' />
	</label>
	<label>
		Title:
		<input type='text' name='title' />
	</label>
	<label>
		Project design:
		<input type='file' accept='.png, .jpeg, .jpg, .gif' name='design' />
	</label>
	<label>
		Message:
		<textarea name='message'></textarea>
	</label>
	<button type='submit'>Send message</button>
</form>